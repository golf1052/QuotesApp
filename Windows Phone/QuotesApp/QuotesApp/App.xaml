<Application
    x:Class="QuotesApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone">

    <!--Application Resources-->
    <Application.Resources>
        <local:LocalizedStrings xmlns:local="clr-namespace:QuotesApp" x:Key="LocalizedStrings"/>
        <Thickness x:Key="TextBoxHeaderThickness">15,0,0,0</Thickness>
        <FontFamily x:Key="AppFont">Global User Interface</FontFamily>
        <Color x:Key="AppPrimaryColor1">#FFFFC107</Color>
        <Color x:Key="AppPrimaryColor2">#FFFFECB3</Color>
        <Color x:Key="AppPrimaryColor3">#FFFFA000</Color>
        <Color x:Key="AppAccentColor1">#FF6889FF</Color>
        <Color x:Key="AppAccentColor2">#FFA6BAFF</Color>
        <Color x:Key="AppAccentColor3">#FF4D73FF</Color>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>